# Package manager configuration
package-manager=pnpm@latest  # Always use pnpm as the default package manager
pnpm-store=~/.pnpm-store     # Set up the pnpm cache store location
node-linker=hoisted          # Controls how dependencies are hoisted in pnpm

# Dependency management
save-lockfile=true           # Store pnpm’s lock file (pnpm-lock.yaml)
# strict-peer-dependencies=true  # Strict peer-dependency checks for consistency
optional=true               #  adds optional dependencies but nonbreaking
save-exact=true             # Uncomment to save exact dependency versions, avoiding ^ or ~

# Security settings
strict-ssl=true              # Use HTTPS by default for secure installs
registry=https://registry.npmjs.org/  # Use npm registry for all package requests

# Logging configuration
loglevel=verbose                # Set logs to minimal output for cleaner installs (especially in CI pipelines)

# Retry settings (network error handling)
fetch-retries=3               # Increase retries for better network issue tolerance
fetch-retry-factor=3          # Gradual backoff (e.g., 10s → 30s → 60s max)
fetch-retry-mintimeout=10000  # Minimum retry timeout remains 10 seconds
fetch-retry-maxtimeout=60000  # Maximum retry timeout remains 60 seconds

# Lockfile behavior
# prefer-frozen-lockfile=true # Always update npm and peer dependency checks during resolution
prefer-frozen-lockfile=false

