{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "assist": {
    "actions": {
      "recommended": true,
      "source": {
        "organizeImports": "on",
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "extends": "//",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "!videos/**",
      "!screenshots/**",
      "!downloads/**",
      "../cypress.config.ts",
      "*.{ts,tsx,mts,js,jsx,mjs,json}",
      "**/*.{ts,tsx,js,jsx,json,css}"
    ]
  },
  "javascript": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "globals": [
      "cy",
      "Cypress",
      "context",
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "expect"
    ],
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "root": false
}
