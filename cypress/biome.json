{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": "on",
				"recommended": true,
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**/*.{ts,tsx,css,json}"]
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		},
		"globals": ["cy", "Cypress", "context"],
		"linter": {
			"enabled": true
		}
	},
	"json": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		},
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"domains": {
			"project": "recommended",
			"test": "recommended"
		},
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
