{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"allowJs": false,
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"@/component/*": ["./component/*"],
			"@/e2e/*": ["./e2e/*"],
			"@/support/*": ["./support/*"]
		},
		"types": ["cypress", "node"]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.cy.ts",
		"**/*.cy.tsx",
		"cypress.d.ts",
		"../cypress.config.ts"
	]
}
