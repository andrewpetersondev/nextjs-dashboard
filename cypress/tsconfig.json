{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": "../",
		"noEmit": true,
		"paths": {
			"@/component/*": ["cypress/component/*"],
			"@/e2e/*": ["cypress/e2e/*"],
			"@/src/*": ["src/*"],
			"@/support/*": ["cypress/support/*"]
		},
		"types": ["cypress", "node"]
	},
	"extends": "../tsconfig.base.json",
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.cy.ts",
		"**/*.cy.tsx",
		"../cypress.d.ts",
		"../cypress.config.ts"
	]
}
