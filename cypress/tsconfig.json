// biome-ignore-all assist/source/useSortedKeys: <preferred organization>
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "esModuleInterop": true,

    /* Cypress Types */
    "types": ["cypress", "node", "@testing-library/cypress"],

    /* Path Mapping */
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["e2e/**/*.cy.{ts,tsx}", "support/**/*.ts", "commands.ts"],
  "exclude": ["../node_modules", "../.next", "../dist"]
}
