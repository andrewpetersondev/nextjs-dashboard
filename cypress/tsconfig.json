{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"target": "es5",
		"lib": ["es5", "dom", "esnext"],
		"types": ["cypress", "node"],
		"isolatedModules": false,
		"sourceMap": true,

		/* Cypress-specific path mapping */
		"baseUrl": ".",
		"paths": {
			"@/*": ["../src/*"],
			"@/app/*": ["../src/app/*"],
			"@/components/*": ["../src/components/*"],
			"@/config/*": ["../src/config/*"],
			"@/lib/*": ["../src/lib/*"],
			"@/ui/*": ["../src/ui/*"],
			"@/utils/*": ["../src/utils/*"],
			"@/hooks/*": ["../src/hooks/*"],
			"@/types/*": ["../src/types/*"],
			"@/cypress/*": ["./*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"../cypress.config.ts",
		"../src/**/*.ts",
		"../src/**/*.tsx"
	],
	"exclude": [
		"../node_modules",
		"../.next",
		"videos",
		"screenshots",
		"downloads"
	]
}
