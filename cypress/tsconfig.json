{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2022",
    "types": ["cypress", "node", "@testing-library/cypress"]
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
