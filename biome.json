{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "assist": {
    "actions": {
      "recommended": true,
      "source": {
        "organizeImports": "on",
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "css": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "*.{ts,tsx,mts,mjs,json}",
      "src/app/globals.css",
      "src/**/*.{ts,tsx}",
      "!node_modules/**",
      "!.next/**",
      "!out/**",
      "!storage/**",
      "!src/lib/db/drizzle/**",
      "!pnpm-lock.yaml",
      "!pnpm-workspace.yaml",
      "!cypress.config.ts",
      "!cypress/**",
      "!.turbo/**",
      "!**/dist/**",
      "!build/**",
      "!coverage/**",
      "!.nyc_output/**",
      "*!.log",
      "!.env*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "domains": {
      "next": "recommended",
      "react": "recommended"
    },
    "enabled": true,
    "rules": {
      "nursery": { "recommended": true, "useSortedClasses": "error" },
      "recommended": true
    }
  },
  "root": true,
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "root": ".",
    "useIgnoreFile": true
  }
}
