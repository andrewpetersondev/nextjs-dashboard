{
  "$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
  "assist": {
    "actions": {
      "recommended": true,
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "css": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!!**/build",
      "!!**/dist",
      "!!.next",
      "!!**/out",
      "!!**/coverage",
      "!!**/*.nyc_output",
      "!!**/*.log",
      "!!storage",
      "!!docs",
      "!tsconfig.tsbuildinfo",
      "!.aiassistant",
      "!.github",
      "!.idea",
      "!.junie",
      "!cypress",
      "!**/*.js",
      "!**/*.jsx",
      "!drizzle",
      "!node_modules",
      "!public",
      "!.aiignore",
      "!.env*",
      "!next-env.d.ts",
      "!pnpm-lock.yaml",
      "!pnpm-workspace.yaml",
      "!.turbo"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "domains": {
      "next": "all",
      "project": "recommended"
    },
    "enabled": true,
    "rules": {
      "a11y": {
        "noNoninteractiveElementInteractions": "on",
        "recommended": true
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "on",
        "noExcessiveLinesPerFunction": "on",
        "noExcessiveNestedTestSuites": "on",
        "noForEach": "on",
        "noImplicitCoercions": "on",
        "noUselessStringConcat": "on",
        "noVoid": "on",
        "recommended": true,
        "useSimplifiedLogicExpression": "on",
        "useWhile": "on"
      },
      "correctness": {
        "noGlobalDirnameFilename": "on",
        "noNestedComponentDefinitions": "on",
        "noNodejsModules": "on",
        "noProcessGlobal": "on",
        "noReactPropAssignments": "on",
        "noUndeclaredVariables": "on",
        "noUnusedFunctionParameters": "on",
        "noUnusedImports": "on",
        "noUnusedLabels": "on",
        "noUnusedPrivateClassMembers": "on",
        "noUnusedVariables": "on",
        "recommended": true,
        "useJsonImportAttributes": "on",
        "useSingleJsDocAsterisk": "on",
        "useUniqueElementIds": "on"
      },
      "nursery": {
        "noContinue": "on",
        "noDeprecatedImports": "on",
        "noDuplicateDependencies": "on",
        "noDuplicatedSpreadProps": "on",
        "noShadow": "on",
        "noUselessUndefined": "on",
        "useExplicitType": "off",
        "useMaxParams": "on",
        "useSortedClasses": "on"
      },
      "performance": {
        "noAwaitInLoops": "on",
        "noBarrelFile": "on",
        "noDelete": "on",
        "noNamespaceImport": "on",
        "noReExportAll": "on",
        "recommended": true,
        "useTopLevelRegex": "on"
      },
      "recommended": true,
      "security": {
        "noDangerouslySetInnerHtml": "on",
        "noDangerouslySetInnerHtmlWithChildren": "on",
        "recommended": true
      },
      "style": {
        "noCommonJs": "on",
        "noEnum": "on",
        "noExportedImports": "on",
        "noImplicitBoolean": "on",
        "noInferrableTypes": "on",
        "noMagicNumbers": "on",
        "noNamespace": "on",
        "noNegationElse": "on",
        "noNestedTernary": "on",
        "noNonNullAssertion": "on",
        "noParameterAssign": "on",
        "noParameterProperties": "on",
        "noProcessEnv": "on",
        "noShoutyConstants": "on",
        "noSubstr": "on",
        "noUnusedTemplateLiteral": "on",
        "noUselessElse": "on",
        "noYodaExpression": "on",
        "recommended": true,
        "useAsConstAssertion": "on",
        "useAtIndex": "on",
        "useBlockStatements": "on",
        "useCollapsedElseIf": "on",
        "useCollapsedIf": "on",
        "useComponentExportOnlyModules": "on",
        "useConsistentArrayType": "on",
        "useConsistentBuiltinInstantiation": "on",
        "useConsistentCurlyBraces": "on",
        "useConsistentMemberAccessibility": "on",
        "useConsistentObjectDefinitions": "on",
        "useDefaultParameterLast": "on",
        "useDefaultSwitchClause": "on",
        "useEnumInitializers": "on",
        "useExplicitLengthCheck": "on",
        "useExportsLast": "on",
        "useFilenamingConvention": "on",
        "useForOf": "on",
        "useFragmentSyntax": "on",
        "useGroupedAccessorPairs": "on",
        "useNumberNamespace": "on",
        "useNumericSeparators": "on",
        "useObjectSpread": "on",
        "useReadonlyClassProperties": "on",
        "useSelfClosingElements": "on",
        "useShorthandAssign": "on",
        "useSingleVarDeclarator": "on",
        "useSymbolDescription": "on",
        "useThrowNewError": "on",
        "useThrowOnlyError": "on",
        "useTrimStartEnd": "on",
        "useUnifiedTypeSignatures": "on"
      },
      "suspicious": {
        "noAlert": "on",
        "noBitwiseOperators": "on",
        "noConstantBinaryExpressions": "on",
        "noEmptyBlockStatements": "on",
        "noEvolvingTypes": "on",
        "noMisplacedAssertion": "on",
        "noRedeclare": "on",
        "noSkippedTests": "on",
        "noUnassignedVariables": "on",
        "noVar": "on",
        "recommended": true,
        "useAwait": "on",
        "useErrorMessage": "on",
        "useGuardForIn": "on",
        "useNumberToFixedDigitsArgument": "on",
        "useStaticResponseMethods": "on",
        "useStrictMode": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/modules/auth/shared/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["@/modules/auth/server/**", "@/server/**"],
                    "message": "auth/shared must be isomorphic: do not import server-only modules."
                  },
                  {
                    "group": ["next/**"],
                    "message": "auth/shared must be isomorphic: do not import Next.js server APIs."
                  },
                  {
                    "group": ["node:*"],
                    "message": "auth/shared must be isomorphic: do not import Node-only APIs."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/modules/auth/server/application/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": [
                      "@/modules/auth/server/infrastructure/**",
                      "@/server/**"
                    ],
                    "message": "Clean/hex rule: application layer must not import infrastructure or server adapters."
                  },
                  {
                    "group": ["next/**", "react/**"],
                    "message": "Clean/hex rule: application layer must be framework-agnostic."
                  },
                  {
                    "group": [
                      "drizzle-orm",
                      "drizzle-orm/**",
                      "drizzle-kit",
                      "drizzle-kit/**"
                    ],
                    "message": "Clean/hex rule: application layer must not depend on DB libraries."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/shared/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["../**"],
                    "message": "src/shared may only import from src/shared or node_modules."
                  },
                  {
                    "group": [
                      "@/app/**",
                      "@/modules/**",
                      "@/server/**",
                      "@/shell/**"
                    ],
                    "message": "src/shared must not import from higher-level application modules."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/ui/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": [
                      "@/app/**",
                      "@/modules/**",
                      "@/server/**",
                      "@/shell/**"
                    ],
                    "message": "src/ui may only import from src/ui, src/shared, or npm packages."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/modules/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["@/app/**", "@/shell/**"],
                    "message": "src/modules must not import from src/app or src/shell."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/shell/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["@/app/**"],
                    "message": "src/shell must not import from src/app."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/shared/config/**/*.ts"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": [
                      "@/shared/logging/**",
                      "../logging/**",
                      "../../shared/logging/**"
                    ],
                    "message": "config must not import the logger â€” it initializes too early."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": [
        "src/ui/**/*.{ts,tsx}",
        "src/shell/**/*.{ts,tsx}",
        "src/modules/**/components/**/*.{ts,tsx}",
        "src/modules/**/hooks/**/*.{ts,tsx}"
      ],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["@/server/db/schema/**"],
                    "message": "Client/UI code must not import DB schema files. Use DTOs or shared types."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/server/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off",
            "noProcessGlobal": "off"
          },
          "style": {
            "noProcessEnv": "off"
          }
        }
      }
    },
    {
      "includes": [
        "src/**/*.{test.ts,test.tsx,spec.ts,spec.tsx}",
        "src/**/__tests__/**/*.{ts,tsx}"
      ],
      "linter": {
        "rules": {
          "complexity": {
            "noExcessiveCognitiveComplexity": "off",
            "noExcessiveLinesPerFunction": "off"
          },
          "style": {
            "noMagicNumbers": "off"
          },
          "suspicious": {
            "noSkippedTests": "off"
          }
        }
      }
    },
    {
      "includes": ["cypress/**/*.{ts,tsx}", "cypress.config.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off",
            "noProcessGlobal": "off",
            "noUndeclaredVariables": "off"
          },
          "style": {
            "noMagicNumbers": "off",
            "noProcessEnv": "off"
          }
        }
      }
    }
  ],
  "root": true,
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
