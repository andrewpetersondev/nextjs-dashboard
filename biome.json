{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "assist": {
    "actions": {
      "recommended": true,
      "source": {
        "organizeImports": "on",
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "css": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!.aiassistant",
      "!.github",
      "!.idea",
      "!.junie",
      "!.next",
      "!**/*.js",
      "!**/*.jsx",
      "!docs",
      "!drizzle",
      "!node_modules",
      "!public",
      "!storage",
      "!.aiignore",
      "!.env*",
      "!next-env.d.ts",
      "!pnpm-lock.yaml",
      "!pnpm-workspace.yaml",
      "!tsconfig.tsbuildinfo",
      "!out",
      "!.turbo",
      "!dist",
      "!**/dist",
      "!build",
      "!coverage",
      "!.nyc_output",
      "!*.log"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "globals": ["cy", "Cypress"],
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "domains": {
      "next": "all",
      "project": "all",
      "react": "all",
      "test": "all"
    },
    "enabled": true,
    "rules": {
      "a11y": "on",
      "complexity": {
        "noExcessiveCognitiveComplexity": "on",
        "noExcessiveLinesPerFunction": "on",
        "noExcessiveNestedTestSuites": "on",
        "noForEach": "on",
        "recommended": true
      },
      "correctness": {
        "noGlobalDirnameFilename": "on",
        "noNodejsModules": "on",
        "noProcessGlobal": "on",
        "noRestrictedElements": "off",
        "noUndeclaredVariables": "on",
        "recommended": true,
        "useImportExtensions": "off",
        "useUniqueElementIds": "off"
      },
      "nursery": {
        "noNonNullAssertedOptionalChain": "on",
        "noShadow": "on",
        "noUselessUndefined": "on",
        "recommended": true,
        "useExplicitType": "off",
        "useMaxParams": "on",
        "useSortedClasses": "on"
      },
      "performance": {
        "noAwaitInLoops": "on",
        "noBarrelFile": "on",
        "noDelete": "on",
        "noNamespaceImport": "on",
        "noReExportAll": "on",
        "recommended": true,
        "useTopLevelRegex": "on"
      },
      "recommended": true,
      "security": {
        "recommended": true
      },
      "style": {
        "noCommonJs": "on",
        "noEnum": "on",
        "noExportedImports": "on",
        "noImplicitBoolean": "on",
        "noInferrableTypes": "on",
        "noMagicNumbers": "on",
        "noNamespace": "on",
        "noNegationElse": "on",
        "noNestedTernary": "on",
        "noNonNullAssertion": "on",
        "noParameterAssign": "on",
        "noParameterProperties": "on",
        "noProcessEnv": "on",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "patterns": [
              {
                "group": [
                  "@/shared/config/env-shared",
                  "../shared/config/env-shared",
                  "../../shared/config/env-shared",
                  "../../../shared/config/env-shared",
                  "src/shared/config/env-shared"
                ],
                "message": "env-shared.ts can only be imported from env-next.ts and env-node.ts."
              },
              {
                "group": ["node:process"],
                "message": "Do not import node:process. Use the global `process` instead."
              }
            ]
          }
        },
        "noShoutyConstants": "on",
        "noSubstr": "on",
        "noUnusedTemplateLiteral": "on",
        "noUselessElse": "on",
        "noYodaExpression": "on",
        "recommended": true,
        "useAsConstAssertion": "on",
        "useBlockStatements": "on",
        "useCollapsedElseIf": "on",
        "useCollapsedIf": "on",
        "useConsistentArrayType": "on",
        "useConsistentBuiltinInstantiation": "on",
        "useConsistentCurlyBraces": "on",
        "useConsistentMemberAccessibility": "on",
        "useConsistentObjectDefinitions": "on",
        "useDefaultParameterLast": "on",
        "useDefaultSwitchClause": "on",
        "useEnumInitializers": "on",
        "useExplicitLengthCheck": "on",
        "useExportsLast": "on",
        "useFilenamingConvention": "on",
        "useForOf": "on",
        "useFragmentSyntax": "on",
        "useGroupedAccessorPairs": "on",
        "useNamingConvention": "off",
        "useNumberNamespace": "on",
        "useNumericSeparators": "on",
        "useObjectSpread": "on",
        "useReadonlyClassProperties": "on",
        "useSelfClosingElements": "on",
        "useShorthandAssign": "on",
        "useSingleVarDeclarator": "on",
        "useSymbolDescription": "on",
        "useThrowNewError": "on",
        "useThrowOnlyError": "on",
        "useTrimStartEnd": "on",
        "useUnifiedTypeSignatures": "on"
      },
      "suspicious": {
        "noAlert": "on",
        "noBitwiseOperators": "on",
        "noConstantBinaryExpressions": "on",
        "noEmptyBlockStatements": "on",
        "noEvolvingTypes": "on",
        "noMisplacedAssertion": "on",
        "noSkippedTests": "on",
        "noUnassignedVariables": "on",
        "noVar": "on",
        "recommended": true,
        "useAwait": "on",
        "useErrorMessage": "on",
        "useGuardForIn": "on",
        "useNumberToFixedDigitsArgument": "on",
        "useStaticResponseMethods": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "devtools/**/*.{ts,tsx,js,cjs,mjs}",
        "cypress.config.*",
        "scripts/**/*.{ts,tsx,js,cjs,mjs}",
        "src/db/**/*.{ts,tsx,js,cjs,mjs}"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off"
          }
        }
      }
    },
    {
      "includes": ["src/shared/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["../**"],
                    "message": "src/shared can only import within src/shared (or npm packages)."
                  },
                  {
                    "group": ["@/features/**", "@/server/**", "@/ui/**"],
                    "message": "src/shared cannot import from features, server, or ui."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": [
        "src/app/**/*.{ts,tsx}",
        "src/features/**/*.{ts,tsx}",
        "src/ui/**/*.{ts,tsx}",
        "cypress/e2e/**/*.{ts,tsx}"
      ],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": [
                      "@/devtools/**",
                      "../devtools/**",
                      "../../devtools/**",
                      "src/devtools/**"
                    ],
                    "message": "Client/browser code must not import from devtools/**."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": [
        "src/shared/config/env/public-env.client.ts",
        "src/shared/config/env/env-shared.ts",
        "src/server/config/env-next.ts",
        "devtools/config/env-node.ts"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noProcessGlobal": "off"
          },
          "style": {
            "noProcessEnv": "off",
            "noRestrictedImports": "off"
          }
        }
      }
    },
    {
      "includes": ["src/ui/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["@/features/**", "@/server/**"],
                    "message": "src/ui can import only from src/ui and src/shared (and npm packages)."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/features/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["@/server/**", "../server/**", "../**/server/**"],
                    "message": "src/features can import from src/features and src/shared, but not from src/server."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/features/*/components/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["@/server/**", "!@/server/*/actions/**"],
                    "message": "Components may import only server actions from their matching feature: @/server/<feature>/actions/**"
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/shell/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["@/app/**"],
                    "message": "src/shell must not import from src/app."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["src/server/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "off",
              "options": {}
            }
          }
        }
      }
    }
  ],
  "root": true,
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
