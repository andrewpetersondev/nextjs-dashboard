{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "assist": {
    "actions": {
      "recommended": true,
      "source": {
        "organizeImports": "on",
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "css": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "*.{ts,tsx,mts,mjs,json}",
      "src/**/*.{ts,tsx}",
      "src/app/globals.css",
      "cypress/**/*.{ts,tsx,css,json}",
      "!node_modules",
      "!.next",
      "!next-env.d.ts",
      "!out",
      "!storage",
      "!src/lib/db/drizzle",
      "!pnpm-lock.yaml",
      "!pnpm-workspace.yaml",
      "!.turbo",
      "!**/dist",
      "!build",
      "!coverage",
      "!.nyc_output",
      "!*.log",
      "!.env*",
      "!tsconfig.tsbuildinfo"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "domains": {
      "next": "recommended",
      "project": "recommended",
      "react": "recommended",
      "test": "recommended"
    },
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "root": true,
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "root": ".",
    "useIgnoreFile": true
  }
}
