{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": "on",
				"recommended": true,
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"css": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/vault/**",
			"!pnpm-lock.yaml",
			"!public/**",
			"!.run",
			"!.idea/**",
			"!.vscode",
			"!keep",
			"!storage",
			"!src/lib/db/drizzle/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"quoteStyle": "double"
		},
		"linter": {
			"enabled": true
		}
	},
	"json": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab"
		},
		"linter": {
			"enabled": true
		},
		"parser": {
			"allowComments": false
		}
	},
	"linter": {
		"domains": {
			"next": "recommended",
			"project": "recommended",
			"react": "recommended"
		},
		"enabled": true,
		"rules": {
			"a11y": "on",
			"complexity": "on",
			"correctness": "on",
			"performance": "on",
			"recommended": true,
			"security": "on",
			"style": "on"
		}
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"root": ".",
		"useIgnoreFile": true
	}
}
