{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": "on",
				"recommended": true,
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"css": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"src/**/*.{ts,tsx,css,json,md}",
			"cypress/**/*.{ts,tsx,css,json}",
			"cypress.config.ts",
			"drizzle-dev.config.ts",
			"drizzle-test.config.ts",
			"envConfig.ts",
			"next.config.ts",
			"package.json",
			"postcss.config.mjs",
			"tsconfig.json",
			"!src/lib/db/drizzle/**/*"
		]
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		},
		"globals": ["cy", "Cypress", "context"],
		"linter": {
			"enabled": true
		}
	},
	"json": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		},
		"parser": {
			"allowComments": false
		}
	},
	"linter": {
		"domains": {
			"next": "recommended",
			"project": "recommended",
			"react": "recommended"
		},
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"root": ".",
		"useIgnoreFile": true
	}
}
