{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		},
		"types": ["node", "react", "react-dom"],
		"plugins": [{ "name": "next" }]
	},
	"include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "cypress.config.ts", "cypress", "storage"]
}
