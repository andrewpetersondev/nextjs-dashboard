// biome-ignore-all assist/source/useSortedKeys: <preferred organization>
{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    /* Type Checking */
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Mapping */
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Next.js specific */
    "plugins": [
      {
        "name": "next"
      }
    ]

    /* Types */
    /* Removed because .next/types/ in the include path is enough (according to AI chat) */
    /* "types": ["node", "react", "react-dom"] */
  },
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "drizzle-dev.config.ts",
    "drizzle-test.config.ts",
    "envConfig.ts",
    "next.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "storage",
    "docs",
    "cypress",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
