// biome-ignore-all assist/source/useSortedKeys: <preferred organization>
{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2024",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    /* Relative Imports */
    //    "allowImportingTsExtensions": true,
    /* Type Checking */
    // strict = true: also sets strictBindCallApply, strictFunctionTypes, strictNullChecks, strictPropertyInitialization, useUnknownInCatchVariables
    "strict": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Path Mapping */
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    /* Next.js specific */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "./.aiassistant",
    "./.github",
    "./.junie",
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "storage",
    "docs",
    "cypress",
    "coverage",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.cy.ts",
    "**/*.cy.tsx"
  ]
}
