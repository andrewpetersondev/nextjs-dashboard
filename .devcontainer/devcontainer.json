{
    "name": "Next.js & TypeScript",
    "dockerComposeFile": "../compose.dev.yaml",
    "service": "web",
    "workspaceFolder": "/project",
    "forwardPorts": [
        3000,
        5432,
        9229,
        9230,
        8080
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-azuretools.vscode-docker",
                "bradlc.vscode-tailwindcss",
                "ms-vscode.vscode-typescript-next",
                "ms-vscode.js-debug-nightly",
                "emilast.logfilehighlighter",
                "streetsidesoftware.code-spell-checker",
                "ms-ossdata.vscode-postgresql"
            ]
        }
    },
  "mounts": [
    "source=${localWorkspaceFolder},target=/project,type=bind,consistency=cached",
    "source=node_modules,target=/project/node_modules,type=volume",
    "source=pnpm-store,target=/pnpm/store,type=volume"
  ],
  "remoteUser": "node"
}
