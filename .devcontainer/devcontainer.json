{
	"name": "Existing Docker Compose (Extend)",
	"dockerComposeFile": [
		"docker-compose.yaml"
	],
	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "node-server",
	"runServices": [
		"node-server",
		"postgres-db",
		"my_network"
	],
	// "workspaceFolder": "/project/nextjs-dashboard",
	"workspaceFolder": "/",
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {
			"installDirectlyFromGitHubRelease": true,
			"version": "latest"
		},
		"ghcr.io/joshuanianji/devcontainer-features/mount-pnpm-store": {},
		"ghcr.io/robbert229/devcontainer-features/postgresql-client": {}
	},
	"forwardPorts": [
		"3000:3000",
		"5432:5432",
		"9229:9229"
	],
	// "shutdownAction": "none",
	"onCreateCommand": "pnpm install",
	"postCreateCommand": "pnpm dev",
	"customizations": {
		"vscode": {
			"extensions": [
				"-dbaeumer.vscode-eslint",
				"-esbenp.prettier-vscode",
				"-rvest.vs-code-prettier-eslint",
				"streetsidesoftware.code-spell-checker",
				"ms-vscode-remote.remote-containers",
				"github.copilot",
				"github.copilot-chat",
				"github.vscode-pull-request-github",
				"visualstudioexptteam.vscodeintellicode",
				"visualstudioexptteam.intellicode-api-usage-examples",
				"visualstudioexptteam.vscodeintellicode-completions",
				"ms-vscode-remote.vscode-remote-extensionpack",
				"bradlc.vscode-tailwindcss"
			],
			"settings": {
				"github.copilot.enable": true,
				"github.copilot.suggestionDelay": 150
			}
		}
		// "remoteUser": "devcontainer"
	}
}
